---
layout: layouts/base.njk
pagination:
  data: collections.tagList
  size: 1
  alias: tag
permalink: /tags/{{ tag | slugify }}/
eleventyComputed:
  title: "Posts tagged with #{{ tag }}"
---

<div class="main-container" style="max-width: 900px; margin: 0 auto; padding: 2rem 1rem;">
  <nav style="margin-bottom: 1.5rem;">
    <a href="/tags/" style="color: var(--accent); text-decoration: none; font-family: monospace;">← back to all tags</a>
  </nav>

  <div class="blog-list">
    <h1>#{{ tag }}</h1>
    <p class="subtitle">All posts tagged with {{ tag }}</p>

    <div class="posts">
      {% set tagposts = collections[tag] | reverse %}
      {% for post in tagposts %}
        <article class="post-preview">
          <h2>
            <a href="{{ post.url }}">{{ post.data.title }}</a>
          </h2>
          <p class="post-meta">
            <time datetime="{{ post.date }}">{{ post.date | dateDisplay }}</time>
          </p>
          <p class="post-excerpt">{{ post.data.description }}</p>
          <a href="{{ post.url }}" class="read-more">Read more →</a>
        </article>
      {% endfor %}
    </div>
  </div>
</div>
